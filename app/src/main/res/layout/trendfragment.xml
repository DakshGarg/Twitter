<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/tw__composer_white">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Trending Now"
        android:textColor="@color/tw__composer_black"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_margin="10dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:layout_below="@+id/followingTextview"
        android:background="@color/tw__composer_deep_gray"
        android:layout_marginTop="0.2dp"/>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh_layout_for_trends"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

            <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/trendListView"
                android:dividerHeight="0.2dp"></ListView>


    </android.support.v4.widget.SwipeRefreshLayout>

</LinearLayout>